<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<script>
	function validateForm(form) {
		if (form.name.value == "") 
		{
			alert("작성자를 입력하세요.");
			form.name.focus();
			false;
		}
		if (form.title.value == "") 
		{
			alert("제목을 입력하세요.");
			form.title.focus();
			false;
		}
		if (form.content.value == "") 
		{
			alert("내용을 입력하세요.");
			form.content.focus();
			false;
		}
		if (form.pass.value == "") 
		{
			alert("비밀번호를 입력하세요.");
			form.pass.focus();
			false;
		}
	}
</script>
</head>
<body>

</body>
</html>